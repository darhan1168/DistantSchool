@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DistantSchool.ViewModels.LoginViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Login</h2>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label asp-for="@Model.Username" class="font-weight-bold">Username</label>
                            <input asp-for="@Model.Username" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Password" class="font-weight-bold">Password</label>
                            <input asp-for="@Model.Password" type="password" class="form-control" />
                        </div>

                        <div style="margin-top: 10px;">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
