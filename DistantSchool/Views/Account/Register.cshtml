@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DistantSchool.ViewModels.RegisterViewModel

<h2>Register</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="@Model.Username"></label>
        <input asp-for="@Model.Username" class="form-control" />
        <span asp-validation-for="@Model.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input asp-for="@Model.Password" type="password" class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="@Model.UserType"></label>
        <select asp-for="@Model.UserType" class="form-control">
            <option value="Student">Student</option>
            <option value="Teacher">Teacher</option>
        </select>
        <span asp-validation-for="@Model.UserType" class="text-danger"></span>
    </div>    

    <button type="submit" class="btn btn-primary">Register</button>
</form>