@model List<Assignment>

<div class="container mt-5">
    <h2>Assignments</h2>
    <form class="form-inline mb-3">
        <div class="form-group mr-2">
            <label for="searchQuery">Search by Name:</label>
            <input type="text" class="form-control" id="searchQuery" name="searchQuery">
        </div>
        <div class="form-group mr-2">
            <label for="className">Filter by Class:</label>
            <select class="form-control" id="className" name="className">
                <option value="">All Subjects</option>
                <option value="11B">Mathematics</option>
                <option value="11C">Science</option>
                <option value="10A">History</option>
                <option value="10B">Literature</option>
                <option value="10C">Computer Science</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var assignment in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Assignment # @assignment.AssignmentId</h5>
                            <p class="card-text">Description: @assignment.Description</p>
                            <p class="card-text">Deadline: @assignment.Deadline.ToString("MM/dd/yyyy")</p>
                            <p class="card-text">Status: @assignment.Status</p>
                            @if (assignment.Grades.Any())
                            {
                                <p class="card-text">Grades:</p>
                                <ul>
                                    @foreach (var grade in assignment.Grades)
                                    {
                                        <li>Student ID: @grade.StudentId, Grade: @grade.Value, Comment: @grade.Comment</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="card-text">No grades yet</p>
                            }
                        </div>
                    </div>
                    <a href="@Url.Action("Details", "Assignment", new { id = assignment.AssignmentId })" class="btn btn-info btn-sm">Details</a>
                </div>
            }
        }
        else
        {
            <p>No assignments available.</p>
        }
    </div>
</div>