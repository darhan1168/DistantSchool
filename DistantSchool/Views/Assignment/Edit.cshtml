@model Assignment

<div class="container mt-5">
    <h2>Edit Assignment</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="AssignmentId" />
        <input type="hidden" asp-for="LessonId" />
        <input type="hidden" asp-for="Grades" />
        <input type="hidden" asp-for="Lesson" />

        <div class="form-group">
            <label asp-for="Description" class="font-weight-bold">Assignment Description</label>
            <input asp-for="Description" class="form-control" value="@Model?.Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Deadline" class="font-weight-bold">Deadline</label>
            <input asp-for="Deadline" class="form-control" type="date" value="@Model?.Deadline.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")"/>
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Assignment</button>
    </form>
</div>