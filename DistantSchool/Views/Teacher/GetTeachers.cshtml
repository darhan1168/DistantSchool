@model List<Teacher>

<div class="container">
    <h4>Total Teachers: @Model.Count</h4>
    <div class="row justify-content-center">
        @foreach (var teacher in Model)
        {
            <div class="col-md-4 mb-4">
                <form class="form border p-3 text-center">
                    <div class="form-group">
                        <strong>Name:</strong> @teacher.FirstName @teacher.LastName @teacher.Patronymic
                    </div>
                    <div class="form-group">
                        <strong>Teaching years:</strong> @teacher.TeachingYears
                    </div>
                </form>
            </div>
        }
    </div>
</div>