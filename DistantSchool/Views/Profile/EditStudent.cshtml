@model DistantSchool.ViewModels.StudentProfileViewModel

<h2 class="text-center">Edit Profile</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 card">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            <form asp-action="EditStudent" method="post">
                <input type="hidden" asp-for="UserID" />
                <input type="hidden" asp-for="UserType" />
                <input type="hidden" asp-for="StudentID" />
                <input type="hidden" asp-for="GradeLevel" />
                <input type="hidden" asp-for="Class" />
                <input type="hidden" asp-for="ClassID" />
                
                <div class="form-group">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Patronymic">Patronymic</label>
                    <input asp-for="Patronymic" class="form-control" />
                </div>
                
                <div class="form-group">
                    <label asp-for="Birthdate">Birthdate</label>
                    <input asp-for="Birthdate" type="date" class="form-control" />
                </div>    

                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
