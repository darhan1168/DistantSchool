@model Lesson

<div class="container mt-5">
    <h2>Lesson Details</h2>
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-3">Date:</dt>
                <dd class="col-sm-9">@Model.Date.ToString("MM/dd/yyyy")</dd>
                
                <dt class="col-sm-3">URL:</dt>
                <dd class="col-sm-9">@Model.URL</dd>
            </dl>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("CreateAssignment", "Assignment", new { lessonId = Model.LessonId })" class="btn btn-primary">Add Assignment</a>
            
            <dl class="row">
                <dt class="col-sm-3">Assignments:</dt>
                <dd class="col-sm-9">
                    @if (Model.Assignments.Any())
                    {
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Description</th>
                                <th>Deadline</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var assignment in Model.Assignments)
                            {
                                <tr>
                                    <td>@assignment.Description</td>
                                    <td>@assignment.Deadline.ToString("MM/dd/yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("Details", "Assignment", new { id = assignment.AssignmentId })" class="btn btn-info btn-sm">Details</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No assignments for this lesson.</p>
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>