@model Subject

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<div class="container mt-5">
    <h2>Edit Subject</h2>

    <form asp-action="EditValuesOfSubject" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="TeachersClassesSubjects" />

        <div class="form-group">
            <label asp-for="Name" class="font-weight-bold">Subject Name</label>
            <input asp-for="Name" class="form-control" value="@Model?.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="font-weight-bold">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4">@Model?.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>