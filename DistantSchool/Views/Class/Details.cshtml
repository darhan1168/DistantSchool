@model Class

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">Class Details</h2>

                    <div class="row">
                        <div class="col-md-6">
                            <h3>Class Information</h3>
                            <p><strong>Class Name:</strong> @Model.Name</p>
                            <p><strong>Academic Year:</strong> @Model.AcademicYear</p>
                                    <a href="@Url.Action("EditValuesOfClass", "Class", new { id = Model.Id })" class="btn btn-primary btn-sm">Edit values of class</a>
                            <form asp-action="DeleteClass" asp-route-id="@Model.Id" method="post" onsubmit="return confirmDelete('@Model.Name');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete class</button>
                            </form>
                        </div>

                        <div class="col-md-6">
                            <h3>Students</h3>
                            <ul class="list-group">
                                @foreach (var student in Model.Students)
                                {
                                    <li class="list-group-item">@student.FirstName @student.LastName</li>
                                    <div class="float-right">
                                        <a href="@Url.Action("EditClass", "Class", new { studentId = student.StudentID })" class="btn btn-primary btn-sm">Edit class</a>
                                    </div>                                
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function confirmDelete(className) {
        return confirm('Are you sure you want to delete the class "' + className + '"?');
    }
</script>



