@model List<Class>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<div class="container">
    <form class="form-inline mb-3">
        <div class="form-group mr-2">
            <label for="sortingParam">Sort By:</label>
            <select class="form-control" id="sortingParam" name="sortOrder">
                <option value="Name">Class Name (A-Z)</option>
                <option value="NameDesc">Class Name (Z-A)</option>
                <option value="AcademicYear">Academic Year (Ascending)</option>
                <option value="AcademicYearDesc">Academic Year (Descending)</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Sort</button>
    </form>
    
    <a href="@Url.Action("GetStudentsWithoutClass", "Class")" class="btn btn-primary btn-sm">Get students without class</a>

    <a href="@Url.Action("AddClass", "Class")" class="btn btn-primary btn-sm">Add new class</a>

    <div class="row justify-content-center">
        @foreach (var schoolClass in Model)
        {
            <div class="col-md-4 mb-4">
                <form class="form border p-3 text-center">
                    <div class="form-group">
                        <strong>Class Name:</strong> @schoolClass.Name
                    </div>
                    <div class="form-group">
                        <strong>Academic Year:</strong> @schoolClass.AcademicYear
                    </div>

                    <a class="btn btn-primary" asp-controller="Class" asp-action="Details" asp-route-id="@schoolClass.Id">Details</a>
                </form>
            </div>
        }
    </div>
</div>