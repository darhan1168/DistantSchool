@model List<Student>

<div class="container mt-5">
    <h2>Students Without Class</h2>
    <div class="row">
        <div class="col-md-6">
            <ul class="list-group">
                @foreach (var student in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @student.FirstName @student.LastName @student.Patronymic
                        <a href="@Url.Action("EditClass", "Class", new { studentId = student.StudentID })" class="btn btn-primary btn-sm">Add to Class</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>